<resources>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minWidth">56dp</item>
        <item name="android:minHeight">32dp</item>
        <item name="iconGravity">textEnd</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@android:color/white</item>
    </style>

    <style name="FabHome">
        <item name="android:src">@drawable/ic_home</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
    </style>

    <style name="Cursor">
        <item name="android:src">@drawable/ic_next</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="contentDescription">@string/content_desc</item>
    </style>

    <style name="Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="TitleWhite">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="ProgressButton">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="spinning_bar_width">4dp</item>
        <item name="spinning_bar_color">@color/colorOrange</item>
        <item name="spinning_bar_padding">8dp</item>
    </style>

</resources>
