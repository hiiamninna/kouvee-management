<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorGrey"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".transaction.ShowTransactionActivity">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/linearLayout1"
            android:orientation="horizontal"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_home"
                style="@style/FabHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/colorAccent"
                app:fabSize="mini"/>

            <ImageView
                style="@style/Cursor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/content_desc"/>

            <TextView
                android:text="@string/detail_transaction"
                style="@style/Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            app:cardCornerRadius="8dp"
            android:id="@+id/linearLayout2"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_below="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/UpDescription"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="8dp"
                    android:text="@string/created_at"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="SmallSp" />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/created_at"
                    style="@style/ResultDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginHorizontal="8dp" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/UpDescription"
                    android:layout_marginHorizontal="8dp"
                    android:text="@string/updated_at"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="SmallSp" />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/updated_at"
                    style="@style/ResultDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginHorizontal="8dp" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/UpDescription"
                    android:layout_marginHorizontal="8dp"
                    android:text="@string/last_cs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="SmallSp" />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/last_cs"
                    style="@style/ResultDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginHorizontal="8dp" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/UpDescription"
                    android:layout_marginHorizontal="8dp"
                    android:text="@string/last_cashier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="SmallSp" />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/last_cr"
                    style="@style/ResultDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginHorizontal="8dp" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/UpDescription"
                    android:layout_marginHorizontal="8dp"
                    android:text="@string/transaction_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="SmallSp" />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/id"
                    style="@style/ResultDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginHorizontal="8dp" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/UpDescription"
                    android:layout_marginHorizontal="8dp"
                    android:text="@string/customer_pet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="SmallSp" />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/id_customer_pet"
                    style="@style/ResultDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginHorizontal="8dp" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/UpDescription"
                    android:layout_marginHorizontal="8dp"
                    android:text="@string/status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="SmallSp" />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/status"
                    style="@style/ResultDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginHorizontal="8dp" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/UpDescription"
                    android:layout_marginHorizontal="8dp"
                    android:text="@string/discount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="SmallSp" />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/discount"
                    style="@style/ResultDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginHorizontal="8dp" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/UpDescription"
                    android:layout_marginHorizontal="8dp"
                    android:text="@string/total_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="SmallSp" />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/total_price"
                    style="@style/ResultDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginHorizontal="8dp" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/UpDescription"
                    android:layout_marginHorizontal="8dp"
                    android:text="@string/payment_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="SmallSp" />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/payment"
                    style="@style/ResultDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginHorizontal="8dp" />


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_below="@id/linearLayout2"
            android:id="@id/detail"
            android:text="@string/detail"
            android:layout_margin="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/detail"
            tools:listitem="@layout/item_detail_transaction" />
    </RelativeLayout>

</ScrollView>